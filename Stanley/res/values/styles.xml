<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Stanley.Base" parent="@android:style/Theme.Light">
        <item name="android:windowTitleBackgroundStyle">@style/Stanley.Window.Title.Background</item>
        <item name="android:windowTitleStyle">@style/Stanley.Window.Title</item>
    </style>

    <style name="Stanley.Base.Dialog" parent="@android:style/Theme.Dialog" />

    <style name="Stanley.Window.Title.Background">
        <item name="android:background">@drawable/title_background</item>
    </style>

    <style name="Stanley.Window.Title" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/Stanley.Window.Title.Text</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#40400000</item>
    </style>

    <style name="Stanley.Window.Title.Text" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Stanley.Theme" parent="@style/Stanley.Base">
        <item name="android:listViewStyle">@style/Stanley.ListView</item>
        <item name="android:listViewWhiteStyle">@style/Stanley.ListView.White</item>
<!--         <item name="android:buttonStyle">@style/Stanley.Button</item> -->
<!--         <item name="android:imageButtonStyle">@style/Stanley.ImageButton</item> -->
    </style>

    <style name="Stanley.Dialog" parent="@style/Stanley.Base.Dialog"></style>

    <style name="Stanley.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="Stanley.ListView.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="Stanley.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Stanley.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
    </style>

</resources>