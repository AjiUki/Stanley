<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Stanley.Base" parent="@android:style/Theme.Holo.Light">
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_holo_light</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>

        <!-- Action bar -->
        <item name="android:popupMenuStyle">@style/Stanley.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Stanley.DropDownListView</item>
        <item name="android:actionBarStyle">@style/Stanley.ActionBar.Dark</item>
    </style>

    <style name="Stanley.Base.Dialog" parent="@style/Stanley.ActionBar.Dark" />

    <!-- Action Bar Specific -->

    <style name="Stanley.ActionBar.Dark" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#212121</item>
        <item name="android:titleTextStyle">@style/Stanley.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Stanley.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Stanley.PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="Stanley.DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

</resources>